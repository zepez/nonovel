{
  "name": "@nonovel/db",
  "version": "1.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "clean": "../../scripts/clean.sh",
    "db:generate": "yarn drizzle-kit generate:pg",
    "db:introspect": "dotenv -e ../../.env -- bash -c 'PGSSLMODE=require yarn drizzle-kit introspect:pg --out=src/migrations --connectionString \"$PG_CONNECTION_STRING\"'",
    "db:migrate": "dotenv -e ../../.env -- yarn tsx src/migrate.ts",
    "db:version": "yarn drizzle-kit -v",
    "db:seed": "dotenv -e ../../.env -- yarn tsx src/seed.ts",
    "db:fake": "dotenv -e ../../.env -- yarn tsx src/fake.ts",
    "db:empty": "dotenv -e ../../.env -- yarn tsx src/empty.ts",
    "db:reset": "yarn db:empty && yarn db:generate && yarn db:migrate && yarn db:seed",
    "db:slugify": "dotenv -e ../../.env -- esno ./src/slugify-chapter.ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "dotenv-cli": "^7.0.0",
    "drizzle-kit": "^0.19.1",
    "postgres": "^3.3.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@neondatabase/serverless": "^0.6.0",
    "@nonovel/config-server": "*",
    "@types/pg": "^8.6.6",
    "drizzle-orm": "^0.27.0",
    "pg": "^8.11.0",
    "slugify": "^1.6.6",
    "tsx": "^3.12.7"
  }
}
