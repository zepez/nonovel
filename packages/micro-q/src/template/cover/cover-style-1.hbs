<html>
  <head>
    {{> tailwind }}
  </head>
  <body>
    <div class="wrapper">
      <div class="image-container">
        <img src="data:image/jpeg;base64,{{{background}}}" />
        <h3>NoNovel.io</h3>
      </div>
      <h1>{{title}}</h1>
      <h2>{{author}}</h2>
    </div>

    <style>
      .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 600px;
        height: 900px;
        padding: 30px;
        margin: 0px;
        font-weight: 700;
        text-align: center;
        line-height: 1.25;
        color: black;
        background-color: #B5A38E;
      }

      .image-container {
        position: relative;
        flex: 1 1 auto;
        width: 100%;
        height: 100%;
      }

      img {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
        border: 7px solid black;
      }

      h1 {
        font-size: 50px;
        font-family: serif;
        margin: 15px 0px;
      }

      h2 {
        font-size: 40px;
        font-family: serif;
        text-transform: uppercase;
        margin: 0px;
      }

      h3 {
        font-size: 20px;
        font-family: sans-serif;
        position: absolute;
        bottom: 0;
        right: 0;
        margin: 7px;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: 10px 0px;
      }
    </style>
  </body>
</html>
