<html>
  <head>
    {{> tailwind }}
  </head>
  <body>
    <div class="wrapper">
      <h1>{{title}}</h1>
      <img src="data:image/jpeg;base64,{{{background}}}" />
      <h2>{{author}}</h2>
      <h3>NoNovel.io</h3>
    </div>

    <style>
      .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 30px;
        width: 600px;
        height: 900px;
        color: black;
        text-align: center;
        background-color: #B5A38E;
      }

      h1 {
        font-size: 50px;
        font-family: serif;
        line-height: 1.25;
        font-weight: 700;
      }

      h2 {
        font-size: 40px;
        font-family: serif;
        line-height: 1.25;
        font-weight: 700;
        text-transform: uppercase;
        margin: 15px 0px;
      }

      h3 {
        font-size: 25px;
        line-height: 1.25;
        margin: 0px;
      }

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border: 7px solid black;
        border-radius: 10px;
        flex: 1 1 auto;
      }
    </style>
  </body>
