<html>
  <head>
    {{> tailwind }}
  </head>
  <body>
    <div class="cover">
      <div class="cover-inside">
        <div style="padding: 0px 20px;">
          <h1 style="font-size: 75px; font-family: serif; padding-top: 150px; line-height: 1.25;">
            {{title}}
          </h1>
          <h2 style="font-size: 35px; margin-top: 50px;">{{author}}</h2>
        </div>
        <h3 style="font-size: 25px; margin-bottom: 20px;">NoNovel.io</h3>
      </div>
    </div>

    <style>
      .cover { 
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        position: relative;
        font-family: sans-serif; 
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7), 1px 1px 2px rgba(0, 0, 0, 0.7);
      } 
      
      .cover::before { 
        content: "";
        top: 0; 
        left: 0; 
        width: 100%; 
        height: 100%; 
        position: absolute;
        background-image: url(data:image/jpeg;base64,{{{background}}});
        background-size: cover; 
        background-color: rgba(0, 0, 0, 0.3);
        filter: grayscale(25%) blur(1px) brightness(0.3);
      }
      
      .cover-inside { 
        position: relative; 
        text-align: center; 
        display: flex;
        align-items: center; 
        justify-content: space-between; 
        flex-direction: column;
        height: 100%; 
      }
    </style>
  </body>
</html>


    